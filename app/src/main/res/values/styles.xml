<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
    <style name="UnityThemeSelector" parent="android:Theme.Light.NoTitleBar.Fullscreen"></style>
    -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextViewCustomFont_h1">
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextViewCustomFont_h2">
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextViewCustomFont_body">
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="TextViewCustomFont_link">
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextViewCustomFont_menu_item">
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextViewCustomFont_menu_footer">
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextViewCustomFont_table_header">
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="CustomEditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@color/colorGray</item>
        <item name="colorAccent">@color/colorGray</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.Basic" parent="android:TextAppearance.Widget.TextView">
        <item name="fontPath">fonts/CallunaSans-Regular.otf</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginBottom">@dimen/medium_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/medium_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/medium_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/medium_horizontal_margin</item>
    </style>

    <style name="TextAppearance.BasicNoPadding" parent="TextAppearance.Basic">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

</resources>